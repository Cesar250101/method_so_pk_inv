<odoo>
  <data>

		<!-- 	Sale Order -->	
  		<record id="method_so_pk_inv_sales_res_config_settings" model="ir.ui.view">
			<field name="name">Facturacion Automática</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="sale.res_config_settings_view_form"/>			
			<field name="arch" type="xml">		
				
				<xpath expr="//div[@data-key='sale_management']" position="inside">
					<h2>Facturacion Automática</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box" >
	            <div class="o_setting_right_pane">
                <label for="facturacion_automatica"/>
                <field name="facturacion_automatica"/>
                <label for="tipo_documento"/>
                <field name="tipo_documento"/>
	            </div>
	          </div>
          </div>
				</xpath>
				
			</field>
		</record>
  </data>
</odoo>